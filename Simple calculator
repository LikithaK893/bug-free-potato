#Simple Calculator

#Function to addition of two numbers
def add(x,y):
	return x+y  
#Function to subtraction of two numbers
def sub(x,y):
	return x-y  
#Function to multiplication of two numbers
def multi(x,y):
	return x*y
#Funtion to division of two numbers
def divi(x,y):
	return x/y
print("please select the operations in given values below") #select only given options
print("Addition.1") #option number1
print("Subtraction.2") #option number2
print("multiplication.3") #option number3
print("division.4") #option number4

#Take User Choice
choice = int(input("Enter your choice (1/2/3/4): "))

#Take numbers
number_1=float(input("Enter the first number:"))
number_2=float(input("Enter the second number:"))

#Perform the calculator based on user choice  
if choice == 1:
	print("Result:" , add(number_1,number_2))
elif choice == 2:
	print("Result:" , sub(number_1,number_2))
elif choice==3:
	print("Result:" , multi(number_1,number_2))
elif choice ==4:
		print("Result:" , divi(number_1,number_2))
else:
		print("Invaild input")
